<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubendal.kuroganehammercom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/launcher_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AttackListActivity" />
        <activity android:name=".AttributeActivity" />
        <activity android:name=".MovementActivity" />
        <activity android:name=".SpecificAttributeActivity"/>
    </application>

</manifest>